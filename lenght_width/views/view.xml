<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="product_product_view_form_inherit" model="ir.ui.view">
        <field name="name">product product view form inherit</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='variants']" position="after">
                <page name="dimensions" string="Dimensions" attrs="{'invisible': [('is_dimension', '=', False)]}">
                    <group>
                        <field name="lenght"/>
                        <field name="width"/>
                        <field name="thickness"/>
                    </group>
                </page>
            </xpath>
            <xpath expr="//field[@name='name']" position="after">
                <field name="is_dimension" invisible="1"/>
            </xpath>
        </field>
    </record>

    <record id="product_produt_view_form_inherit" model="ir.ui.view">
        <field name="name">prouct product view form inherit</field>
        <field name="model">product.product</field>
        <field name="inherit_id" ref="product.product_normal_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='purchase']" position="after">
                <page name="dimensions" string="Dimensions" attrs="{'invisible': [('is_dimension', '=', False)]}">
                    <group>
                        <field name="lenght"/>
                        <field name="width"/>
                        <field name="thickness"/>
                    </group>
                </page>
            </xpath>
            <xpath expr="//field[@name='name']" position="after">
                <field name="is_dimension" invisible="1"/>
            </xpath>
        </field>
    </record>


    <record id="product_category_view_form_inherit" model="ir.ui.view">
        <field name="name">product category view form inherit</field>
        <field name="model">product.category</field>
        <field name="inherit_id" ref="product.product_category_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='parent_id']" position="after">
                <field name="is_dimension"/>
            </xpath>
        </field>
    </record>

</odoo>

